<div class="show-box">

    <div class="show-title-box">

        <div class="success-style">
            <% if flash[:notice] %>
                <p><%= flash[:notice] %></p>
            <% end %>
        </div>

        <span class="show-title">Title:</span>
        <%= @book.title %>
        <%# インスタンス変数.表示したいカラム名 %>
        <%# 書く順番を間違えない %>
    </div>

    <div class="show-body-box">
        <span class="show-body">Body:</span>
        <%= @book.body %>
    </div>
</div>

<div class="edit-back-box">
    <%= link_to "Edit", edit_book_path(@book) %>
    <span>|</span>
    <%= link_to "Back", books_path %>
</div>